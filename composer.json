{
    "name": "snippetify/snippet-sniffer",
    "description": "Crawling and scraping web pages to extract snippets",
    "type": "library",
    "homepage": "https://snippetify.com",
    "keywords": [
        "bot",
        "snippet",
        "library",
        "scraping",
        "crawling"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Evens Pierre",
            "email": "pierrevensy@gmail.com"
        },
        {
            "name": "Snippetify Community",
            "homepage": "https://github.com/snippetify"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Snippetify\\SnippetSniffer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Snippetify\\SnippetSniffer\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.3.0",
        "guzzlehttp/psr7": "^1.4",
        "fabpot/goutte": "^4.0",
        "monolog/monolog": "^2.1",
        "spatie/crawler": "dev-master",
        "snippetify/programming-languages": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "test": "phpunit"
    }
}
